@using VGWagers.Resource
@using VGWagers.Models
@model PlatformViewModel
  
        <div class="col-md-12">
            @*<section id="registerForm">*@
                @{
                    Html.EnableUnobtrusiveJavaScript();
                    Html.EnableClientValidation();
                }
                @using (Html.BeginForm("SavePlatform", "Lookup", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "platformdetailform" }))
                {
                    @Html.AntiForgeryToken()
                    if (@ViewBag.Mode == "Edit")
                    {
                        <h4 class="lookup-list-title">Edit Platform record</h4>
                    }
                    if (@ViewBag.Mode == "New")
                    {
                        <h4 class="lookup-list-title">Add a new Platform</h4>
                    }
                    <hr />
                    <div class="alert alert-danger" role="alert" style="display: none" id="alertBox"></div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.HiddenFor(m => m.PLATFORMID)
                        @Html.LabelFor(m => m.PLATFORMNAME, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.PLATFORMNAME, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.PLATFORMNAME, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.ISACTIVE, new { @class = "col-md-4 control-label" })
                        <div class="col-md-8 form-control-static">
                            @Html.CheckBoxFor(m => m.ISACTIVE)

                        </div>
                    </div>
                    <div class="form-group">
                        
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-6 col-md-1">
                            <input type="submit" class="btn btn-primary btn-lg" value="Save" />                            
                        </div>
                        <div class="col-md-5 lookup-list-title">
                            @Html.ActionLink(" Cancel and go back to Consoles / Platforms List", "PlatformList", "Lookup", routeValues: null, htmlAttributes: new { id = "cancelPlatformLink", @class = "modal-link cancel-link" })
                        </div>
                    </div>
                }
            @*</section>*@

        </div>
    